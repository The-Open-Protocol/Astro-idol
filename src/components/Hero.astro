---
import Bomb from "../assets/growth.png";
import Mailbox from "../assets/tether.png";
import Folder from "../assets/bitcoin.png";
import Savings from "../assets/launchpad.png";
import Gift from "../assets/locker.png";
---

<section class="product-hero">
  <div class="container">
    <div class="d-table">
      <div class="d-table-cell center">
        <div class="hero-copy">
          <h1 class="h1-title">
            Providing a decentralized and efficient way to trade
            Cryptocurrencies
          </h1>
          <p>
            Traditional AMMs face certain limitations, such as impermanent loss
            and limited liquidity. To address these challenges, innovative AMM
            solutions have emerged, offering enhanced features and benefits.
          </p>
          <div class="product-cta">
            <a href="#" class="button button-primary u-full-width"
              >Apply for Integration â€” It's Free</a
            >
          </div>
        </div>
      </div>
    </div>
    <div class="hero-media">
      <img src={Bomb} alt="Dynamite" />
      <img src={Mailbox} alt="Mailbox" />
      <img src={Folder} alt="Folder" />
      <img src={Savings} alt="Money" />
      <img src={Gift} alt="Gift" />
    </div>
  </div>
</section>

<style lang="scss">
  .product-hero {
    padding: 50px 0;
    .container {
      position: relative;
      .d-table {
        height: 500px;
      }
    }
    .hero-media {
      padding: 5px;
      border-radius: 48px;
    }
    .hero-copy {
      h1,
      p {
        max-width: 600px;
        margin: 20px auto;
      }
    }
    .hero-media {
      img {
        position: absolute;
        width: 160px;
        &:nth-child(1) {
          top: 0;
          left: -100px;
        }
        &:nth-child(2) {
          top: 0;
          right: -100px;
        }
        &:nth-child(3) {
          top: 250px;
          left: 0;
        }
        &:nth-child(4) {
          top: 250px;
          right: 0;
        }
        &:nth-child(5) {
          bottom: -20px;
          left: 50%;
          transform: translateX(-50%);
        }
      }
      @media (max-width: 700px) {
        img {
          &:nth-child(2),
          &:nth-child(3),
          &:nth-child(4) {
            display: none;
          }
        }
      }
    }
  }
</style>
